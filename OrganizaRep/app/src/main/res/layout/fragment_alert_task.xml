<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint_layout_alert_task"
    android:background="@color/colorBackgroundAlert">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        android:clipChildren="false"
        android:id="@+id/constraint_layout_alert_task_modal"
        android:background="@drawable/layout_round_corner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_alert_task_title"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:text="Enviar alerta"
            android:textColor="@color/colorText"
            android:textSize="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_alert_task_text"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="12dp"
            android:text="Você deseja enviar uma notificação avisando sobre tarefas pendentes?"
            android:textColor="@color/colorText"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_alert_task_title" />

        <LinearLayout
            android:id="@+id/linear_layout_alert_task_actions"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_alert_task_text">

            <TextView
                android:id="@+id/tv_alert_task_action"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="22dp"
                android:background="@color/cardview_light_background"
                android:text="Confirmar"
                android:textColor="@color/colorConfirmAlert"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_cancel_alert_task_action"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginLeft="25dp"
                android:background="@color/cardview_light_background"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textColor="@color/colorCancelAlert"
                android:textSize="18dp" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>